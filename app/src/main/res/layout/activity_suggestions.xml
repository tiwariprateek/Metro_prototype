<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".suggestions">

    <ListView
            android:layout_width="match_parent"
            android:layout_height="619dp"
            android:id="@+id/suggestions_listview"
            android:layout_below="@+id/source_text"
            android:layout_marginTop="61dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/source_text"
            android:hint="Enter Source Station"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/destination_text" android:layout_marginBottom="-57dp"
            android:layout_alignBottom="@+id/source_text" android:hint="Enter Destination Station"/>
</RelativeLayout>