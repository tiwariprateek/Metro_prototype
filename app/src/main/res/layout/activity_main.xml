<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <AutoCompleteTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/Destination"
            app:layout_constraintEnd_toEndOf="@+id/Source" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/Source"
            android:hint="Enter Destination station" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/Source" app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/button"/>
    <AutoCompleteTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/Source" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintVertical_bias="0.11"
            android:hint="Enter Source station"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            app:layout_constraintTop_toBottomOf="@+id/Source" app:layout_constraintStart_toStartOf="@+id/Source"
            app:layout_constraintEnd_toEndOf="@+id/Source" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.576"
            app:layout_constraintVertical_bias="0.39"/>
    <TextView
            android:singleLine="false"
            android:maxLines="4"
            android:layout_width="363dp"
            android:layout_height="96dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editText3" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/button"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.512"
            android:textStyle="bold" android:textSize="18sp" android:textAlignment="center"/>
</android.support.constraint.ConstraintLayout>